<body>
  <h1>Books</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", @book, "data-confirm" => "Are you sure?" %></td>
      </tr>
      <% end %>
    </tbody>

  </table>

  <h2>New book</h2>
  <%= form_with model: @dook, url:'books', local:true do |f| %>
  <form class"new_book">
    <div class="field">
     <label for="book_title">Title</label>
     <span><%= f.text_field :title %></span>
    </div>
    <div class="field">
     <label for="book_body">Body</label>
     <span><%= f.text_area :body %></span>
   </div>
   <div class="action">
    <%= f.submit 'Create Book' %>
   </div>
  </form>

<% end %>

</body>
